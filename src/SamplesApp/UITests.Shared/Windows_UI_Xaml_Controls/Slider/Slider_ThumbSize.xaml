<UserControl
    x:Class="UITests.Windows_UI_Xaml_Controls.Slider.Slider_ThumbSize"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.Slider"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

<!-- Forces the control to be fluent since size problem are more likely to occur when the thumb is bigger -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock>1) Vertical slider, range 0 to 100</TextBlock>
        <StackPanel Orientation="Horizontal" Padding="5">
            <Slider
                    x:Name="VerticalSlider1"
                    Height="100"
                    Orientation="Vertical"
                    Minimum="0"
                    Maximum="100"
                    AutomationProperties.Name="vertical slider" />
            <TextBlock Text="{Binding Value, ElementName=VerticalSlider1, Mode=OneWay}" />
        </StackPanel>

        <TextBlock>2) Vertical slider, range 0 to 100, NO FIXED HEIGHT</TextBlock>
        <StackPanel Orientation="Horizontal" Padding="5">
            <Slider
                    x:Name="VerticalSlider2"
                    Width="100"
                    Orientation="Vertical"
                    Minimum="0"
                    Maximum="100"
                    SizeChanged="VerticalSlider2_SizeChanged"
                    AutomationProperties.Name="vertical slider" />
            <TextBlock Text="Value: " />
            <TextBlock Text="{Binding Value, ElementName=VerticalSlider2, Mode=OneWay}" />
            <TextBlock Text="|| Max height attained: " />
            <TextBlock x:Name="VerticalSlider2_MaxHeight"/>
        </StackPanel>

        <TextBlock>3) Horizontal slider, range 0 to 100, NO FIXED WIDTH</TextBlock>
        <StackPanel  Orientation="Horizontal" Padding="5">
            <Slider
            x:Name="HorizontalSlider3"
            AutomationProperties.Name="simple slider" />
            <TextBlock x:Name="HorizontalSlider3_MaxHeight" Text="{Binding Value, ElementName=HorizontalSlider3, Mode=OneWay}" />
        </StackPanel>
    </StackPanel>
</UserControl>
