<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml_Controls.ListView.ListView_Shrinking"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<StackPanel>
		<Button x:Name="addButton" Click="AddRandomItem">Add random item</Button>
		<Button x:Name="removeButton" Click="RemoveLastItem">Remove last item</Button>
		<ListView x:Name="theListView" ItemsSource="{Binding RandomItems}" BorderBrush="Red" BorderThickness="2" SelectionMode="None" IsItemClickEnabled="True" ItemClick="RemoveItem"/>
		<StackPanel Orientation="Horizontal" x:Name="heightStack">
			<TextBlock>TextBox to measure ListVIew height</TextBlock>
		</StackPanel>
	</StackPanel>
	

</UserControl>
